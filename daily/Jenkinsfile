pipeline {
    agent any
    /*triggers {
        cron '''TZ=America/Chicago
            * * * * *'''
    }*/
    parameters {
        choice(choices: ['one', 'two'], description: 'Select an option', name: 'OPTION')
    }
    environment {
        BUILD_TRIGGER_BY = "${currentBuild.getBuildCauses()[0].userId ?: 'SYSTEM'}"
    }
    stages {
        stage('testing') {
            steps {
                script {
                    try {
                        echo "${BUILD_TRIGGER_BY}"
                    } catch (Exception e) {
                        echo "Error: ${e.getMessage()}"
                    }
                }
            }
        }
        stage('triggered by user') {
            when {
                expression { BUILD_TRIGGER_BY != 'SYSTEM' }
            }
            steps {
                script {
                    try {
                        def jsonPath = 'daily/daily.json'
                        echo "Reading JSON file at: ${jsonPath}"

                        def jsonContent = readFile(jsonPath)
                        echo "JSON Content: ${jsonContent}"

                        try {
                            // Parse with default JsonSlurper (returns LazyMap/LazyList)
                            def parsed = new groovy.json.JsonSlurper().parseText(jsonContent)
                            // Convert to plain java.util.* (LinkedHashMap/ArrayList) to avoid LazyMap anywhere
                            def json = toPlainCollections(parsed)

                            echo "Parsed JSON (plain): ${json}"

                            try {
                                if (!json.jobs || !(json.jobs instanceof List) || json.jobs.isEmpty()) {
                                    error "No jobs found in JSON."
                                }
                                echo "json is valid and parsed successfully."

                                try {
                                    echo "processing jobs: ${params.OPTION}"
                                    def selectedJob = json.jobs.find { it.name == params.OPTION }
                                    if (!selectedJob) {
                                        error "Job '${params.OPTION}' not found in JSON."
                                    }

                                    try {
                                        echo "Found job: ${selectedJob}"

                                        // Build a simple nameâ†’string map from parameters
                                        def raw = [:]
                                        (selectedJob.parameters ?: []).each { kv ->
                                            def key = (kv.name == null) ? '' : kv.name.toString()
                                            def val = (kv.value == null) ? '' : kv.value.toString()
                                            raw[key] = val
                                        }

                                        // Construct explicit databound ParameterValue maps (plain java.util Maps)
                                        def jenkinsParams = [
                                            [$class: 'StringParameterValue', name: 'PARAM1', value: (raw['PARAM1'] ?: '')],
                                            [$class: 'StringParameterValue', name: 'PARAM2', value: (raw['PARAM2'] ?: '')],
                                            [$class: 'StringParameterValue', name: 'PARAM3', value: (raw['PARAM3'] ?: '')],
                                            [$class: 'StringParameterValue', name: 'PARAM4', value: (raw['PARAM4'] ?: '')]
                                        ]

                                        // IMPORTANT: use your real Jenkins job full name (breadcrumbs path)
                                        def jobName = 'optimized/queue'
                                        echo "Triggering job '${jobName}' with parameters: ${jenkinsParams}"

                                        try {
                                            build wait: true, job: jobName, parameters: jenkinsParams
                                        } catch (Exception e) {
                                            error "Failed to trigger job '${selectedJob.job}': ${e.getMessage()}"
                                        }

                                    } catch (Exception e) {
                                        error "Error processing selected job: ${e.getMessage()}"
                                    }

                                } catch (Exception e) {
                                    error "Error finding selected job: ${e.getMessage()}"
                                }

                            } catch (Exception e) {
                                error "Error parsing JSON content: ${e.getMessage()}"
                            }

                        } catch (Exception e) {
                            error "Error reading JSON file: ${e.getMessage()}"
                        }

                    } catch (Exception e) {
                        error "Unexpected error (must be the path): ${e.getMessage()}"
                    }
                }
            }
        }
    }
}

/**
 * Recursively convert Groovy JsonSlurper outputs (LazyMap/LazyList)
 * into plain java.util collections (LinkedHashMap/ArrayList) so
 * nothing Lazy leaks into Pipeline steps.
 */
@NonCPS
def toPlainCollections(Object o) {
    if (o instanceof Map) {
        def m = new LinkedHashMap()
        o.each { k, v ->
            // keys from JSON are strings; ensure String keys
            m.put(k?.toString(), toPlainCollections(v))
        }
        return m
    } else if (o instanceof List) {
        def l = new ArrayList()
        o.each { v ->
            l.add(toPlainCollections(v))
        }
        return l
    } else {
        // primitives/strings stay as-is
        return (o == null) ? null : o
    }
}
